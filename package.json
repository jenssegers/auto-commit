{
  "name": "@jenssegers/auto-commit",
  "version": "1.0.1",
  "description": "A CLI tool to automatically generate commit messages using ChatGPT",
  "keywords": [
    "cli",
    "commit",
    "git",
    "auto-commit",
    "commit-message",
    "chatgpt",
    "ai",
    "automation",
    "developer-tools"
  ],
  "license": "ISC",
  "author": "Jens Segers",
  "main": "dist/index.js",
  "bin": "dist/index.js",
  "scripts": {
    "build": "tsc && pkg . --targets node18-macos-arm64 --debug --public-packages '*'",
    "prepublishOnly": "yarn run build",
    "start": "tsx src/index.ts"
  },
  "dependencies": {
    "cli-spinner": "^0.2.10",
    "commander": "^14.0.1",
    "dotenv": "^16.6.1",
    "inquirer": "^12.9.6",
    "openai": "^5.20.3",
    "simple-git": "^3.28.0"
  },
  "devDependencies": {
    "@types/cli-spinner": "^0.2.3",
    "@types/commander": "^2.12.5",
    "@types/node": "^24.5.1",
    "pkg": "^5.8.1",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  },
  "pkg": {
    "outputPath": "bin",
    "patches": {
      "./node_modules/openai/_shims/index.js": [
        "require('openai/_shims/auto/runtime')",
        "require('openai/_shims/node-runtime')"
      ]
    }
  }
}
